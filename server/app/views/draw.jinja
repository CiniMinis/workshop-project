{% extends 'base.jinja' %}

{% set active_page = 'draw' %}

{% block content%}
<script src='/static/draw.js'></script>
    <div class="container pt-4 ps-0 m-0">
        <div class="row">
            <div class="col-6 offset-1 d-flex">
                <h2 class="display-4 text-center align-self-center heading-font dark-text">
                    Draw <small class="text-muted"> Anything You Can Imagine</small>
                </h2>
            </div>
            <div class="col-5 d-flex justify-content-end align-items-end p-0">
                <canvas class="avatar w-100 h-100 border-5 mt-5 border-bottom-0 light-box" id="drawDNACanvas"></canvas>
            </div>
        </div>
        <div class="row text-light">
            <div class="col-6 p-2 color-dark offset-1">
            </div>
            <div class="col-5 color-dark p-2 d-flex justify-content-end">
                <input type="text" id="dnaToDraw" placeholder="DNA..." class="w-100 highlight-box border-5 fs-3"/>
                <button type="button" class="btn highlight-btn rounded-0 fw-bold" id="drawDNABtn" onclick="draw_dna();">Draw</button>
            </div>
        </div>
        <div class="row p-2">
            <div class="col-5 p-2 offset-7 d-flex flex-column align-content-center" id="errorZone">

            </div>
        </div>        
    </div>

{% endblock %}